@{
    ViewBag.Title = "BuildSoft Code Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>BuildSoft CodeTest</h2>
<hr />
<div ng-controller="personController">
    <div class="row">

    </div>
    <div class="row">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Race</th>
                    <th>Age</th>
                    <th>Height</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="person in people">
                    <td> {{person.Name}}</td>
                    <td> </td>
                    <td> {{person.Age}}</td>
                    <td> {{person.Height | number:2}}</td>
                </tr>
            </tbody>
        </table>
        <uib-pagination total-items="totalItems" items-per-page="itemsPerPage" max-size="10" boundary-links="true" ng-model="currentPage" ng-change="pageChanged()"></uib-pagination> 
    </div>
</div>
